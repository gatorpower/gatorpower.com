{
  "compilerOptions": {
    "moduleResolution": "node",
    "removeComments": false,
    "sourceMap": true,
    "target": "es2018",
    "outDir": "dist", 
    "experimentalDecorators": true,
    "declaration": true,
    "strict": true,
    "module": "ESNext",
    "noEmitOnError": true,
    "lib": ["es2017", "dom"], 
    "esModuleInterop": true, 
    "isolatedModules": true 
  },
  "include": ["src/**/*"] // Include all files within src directory
}
